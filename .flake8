# ============================================
# ⚖️ Flake8 Config — Legal Assistant Arbitrage v2.9.7 LTS
# ============================================

[flake8]
max-line-length = 160
extend-ignore = E203, E266, E501, W503, F403, F401
exclude =
    venv,
    node_modules,
    artifacts,
    patches,
    alembic,
    docs,
    backup,
    build,
    dist
# Пропускаем автосгенерированные и тестовые файлы
per-file-ignores =
    __init__.py:F401
    backend/app/tests/conftest.py:E402
